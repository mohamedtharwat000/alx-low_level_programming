# Variables
CC = gcc
SRC = main.c school.c
OBJ = main.o school.o
NAME = school

# Default target
all: $(NAME)

# Rule to build the executable
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Rule to build object files
$(OBJ): $(SRC)
	$(CC) -c -o $(OBJ) $(SRC)

# Clean target to remove object files and the executable
clean:
	rm -f $(OBJ) $(NAME)

# Makefile for the "school" program

# Compiler
CC = gcc

# Source files
SRC = main.c school.c

# Object files (derived from source files)
OBJ = $(SRC:.c=.o)

# Name of the executable
NAME = school

# Rule to build the executable
all: $(NAME)

# Rule to build the executable if source files are updated
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Rule to compile a source file into an object file
%.o: %.c
	$(CC) -c $< -o $@

# Clean rule to remove object files and the executable
clean:
	rm -f $(OBJ) $(NAME)

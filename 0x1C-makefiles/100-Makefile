CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ) m.h
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) $(NAME) $(wildcard *~)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
